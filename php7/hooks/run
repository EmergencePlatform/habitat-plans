#!{{pkgPathFor "core/bash"}}/bin/bash -e

exec 2>&1

# re-run install script
{{pkg.svc_path}}/hooks/install

set -a
. "{{pkg.svc_config_path}}/env"
set +a

php_ini_path="{{pkg.svc_config_path}}/php.ini"
if [ ! -f "${php_ini_path}" ]; then
    php_ini_path="{{pkg.svc_path}}/config_install/php.ini"
fi

exec {{ pkg.env.PHP_FPM }} \
    --nodaemonize \
    --fpm-config {{pkg.svc_config_path}}/php-fpm.conf \
    -c "${php_ini_path}"
